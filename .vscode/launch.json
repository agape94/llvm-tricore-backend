{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "clang: build the current C file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-vscode/bin/clang",
            "args": [
                "--target=tricore",
                "${fileBasename}",
                "-o",
                "${fileBasename}.s",
                "--debug"
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "cwd": "${fileDirname}",
        },
        {
            "name": "llc: build the current LLVM IR file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-vscode/bin/llc",
            "args": [
                "--march=tricore",
                "${fileBasename}",
                "-o",
                "${fileBasename}.s",
                "--debug"
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "cwd": "${fileDirname}",
        },
        {
            "name": "llvm-mc: Assemble the llvm-mc-test.s file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-vscode/bin/llvm-mc",
            "args": [
                // Set the path to the file you want to assemble
                "${workspaceFolder}/tests/llvm-mc-test.s",
                "--triple=tricore",
                "--show-encoding",
                "--debug"
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "cwd": "${fileDirname}",
        }
    ]
}